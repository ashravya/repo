package com.epam.unit;

import java.util.Arrays;

public class Random {

	public static void main(String[] args) {
		int[] data = { 123, 25, 10, 90, 136, 98, 15, 78, 60, 57 };
		int asc = 0, desc = 0;
		for (int i = 0; i < data.length - 1; i++) {
			if (data[i] > data[i + 1]) {
				asc++;
			} else {
				desc++;
			}
		}
	}
}